@model Proje.Models.PersonalViewModel

@{
    ViewData["Title"] = "Add Personal";
    var errormessage = TempData["Error Message"]?.ToString();

}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errormessage))
{
    <div class="alert alert-succes">
        <strong>Success! </strong>@errormessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">  </button>
    </div>

}
<form action="Add" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="NameSurname" />
        <span asp-validation-for="NameSurname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>


    <div class="d-grid">
        <button type="submit" class="btn-btn-primary">Submit</button>

    </div>


</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
