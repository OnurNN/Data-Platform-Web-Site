@model Proje.Models.SectorViewModel

@{
    ViewData["Title"] = "Edit Sector";
    var errormessage = TempData["Error Message"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errormessage))
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@errormessage
    </div>
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert">  </button>
}
<form action="Edit" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="SectorID" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label">Sector Name</label>
        <input type="text" class="form-control" asp-for="SectorName" />
        <span asp-validation-for="SectorName" class="text-danger"></span>
    </div>

    <div class=" mb-3">
        <label class="form-label">Sector Is Active</label>
        <input type="text" class="form-control" asp-for="SectorIsActive" />
        <span asp-validation-for="SectorIsActive" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class=" btn btn-primary">Update</button>
    </div>

</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}