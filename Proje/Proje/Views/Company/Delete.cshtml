@model Proje.Models.CompanyViewModel

@{
    ViewData["Title"] = "Delete Company";
    var errormessage = TempData["Error Message"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errormessage))
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@errormessage
    </div>
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert">  </button>
}
<form action="Delete" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label">Company Name</label>
        <input type="text" class="form-control" asp-for="CompanyName" readonly />
       
    </div>

    <div class=" mb-3">
        <label class="form-label">Company Status</label>
        <input type="text" class="form-control" asp-for="CompanyStatus" readonly />
        
    </div>
    <div class=" mb-3">
        <label class="form-label">Sector</label>
        <input type="number" class="form-control" asp-for="SectorID" readonly />
        
    </div>
    <div class=" mb-3">
        <label class="form-label">İntegrator</label>
        <input type="number" class="form-control" asp-for="EntegrationID" readonly />
       
    </div>
    <div class=" mb-3">
        <label class="form-label">Contract Start Date</label>
        <input type="date" class="form-control" asp-for="Contract_Start" readonly />
        
    </div>
    <div class=" mb-3">
        <label class="form-label">Contract End Date</label>
        <input type="date" class="form-control" asp-for="Contract_End" readonly />
        
    </div>

    <div class=" mb-3">
        <label class="form-label">Authorized</label>
        <input type="text" class="form-control" asp-for="Authorized" readonly />
        
    </div>

    <div class="d-grid">
        <button type="submit" class=" btn btn-danger" onclik ="return function('Are you sure delete company  :
        @Model.CompanyName')">Delete</button>
    </div>

</form>
